set $mouse_mode ""
mode $mouse_mode {
	# Mouse zoom
	bindsym Ctrl+Up exec xdotool click 4
	bindsym Ctrl+Down exec xdotool click 5

	# Mouse scroll
	bindsym Up exec xdotool click 4
	bindsym Down exec xdotool click 5
    
	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+g mode $mouse_mode

